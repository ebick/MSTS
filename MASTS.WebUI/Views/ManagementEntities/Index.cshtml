@model IEnumerable<MASTS.Domain.ManagementEntity>

@{
    ViewBag.Title = "Admin: Management Entity";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Management Entities</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Name</th>
                <th>Company</th>
                <th>Level</th>
                <th>Parent</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.ManagementEntityID</td>                 
                    <td>@Html.ActionLink(item.Description, "Edit", new { item.ManagementEntityID  }) </td>
                    <td>@item.CompanyID</td>
                    <td>@item.ManagementEntityLevelID</td>
                    <td>@item.ParentManagementEntityID</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "ManagementEntities"))
                        {
                            @Html.Hidden("ManagementEntityID", item.ManagementEntityID)
                            <input id="InLineDelete" type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Delete"
                                   onClick="return confirmTheDelete()" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a new management entity", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>


